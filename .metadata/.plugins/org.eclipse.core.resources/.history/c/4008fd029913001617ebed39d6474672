package gui;

import utenti.*;
import collezionabili.*;
import mercato.*;


import javax.swing.*;
import java.awt.*;
import java.awt.LayoutManager;
import java.io.*;
import java.util.*;


public class LoginGui extends JFrame {
	
	
	
	private JLabel usernameLabel,passwordLabel;
	private JTextField usernameField;
	private JPasswordField passwordField;
	private JButton accessButton;
	private JPanel loginPanel;
	private LayoutManager lay;
	
	
	
	//Costruttore 
	
	public LoginGui(){
		
		initComponents("Login");
		
				
		
	}
	
	//Inizializza i componenti della finestra
	private void initComponents(String t){
		
		this.setTitle(t);
		this.setSize(800,600);
		this.setResizable(false);
		this.setVisible(true);
		
       //Crea gli oggetti
		
		this.accessButton=new JButton("Accedi");
		this.usernameLabel=new JLabel("Username");
		this.passwordLabel=new JLabel("Password");
		this.usernameField=new JTextField("Inserisci nome utente");
		this.passwordField=new JPasswordField();
		this.loginPanel=new JPanel();
		
		this.formatComponents();
		this.initLayout();
		
		//Aggiunge gli oggetti
		this.setLayout(lay);
		this.add(usernameLabel,BorderLayout.NORTH);
		this.add(usernameField,BorderLayout.NORTH);
		this.add(passwordLabel,BorderLayout.CENTER);
		this.add(passwordField,BorderLayout.CENTER);
		this.add(accessButton,BorderLayout.SOUTH);
		
		
		
	}
	
	//Inizializza il layout della finestra
	private void initLayout(){
		
		
		//Raffinare in seguito
		
		this.lay=new BorderLayout();
		
		
	}
	
	//Formatta i compoenenti
	
	private void formatComponents(){
		
		
		//Raffinare il codice
	}
	
	
	
	

}
